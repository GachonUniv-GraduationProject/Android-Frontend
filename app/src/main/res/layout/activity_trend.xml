<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trend.TrendActivity"
    android:orientation="vertical"
    android:gravity="center">

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_barChart"
      android:text="bar chart"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_pieChart"
      android:text="pie chart"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_radarChart"
      android:text="radar chart" />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_bubbleChart"
      android:text="bubble chart"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_enterRoadmap"
      android:text="Enter Roadmap"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btn_capacity"
      android:text="Capacity"/>

  <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_weight="1"/>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottom_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:itemIconTint="@color/white"
      app:itemTextColor="@color/white"
      android:background="@color/primary_color"
      app:menu="@menu/bottom_menu"/>



  </LinearLayout>